<div data-controller="turbo-modal"
     data-turbo-modal-target="modal"
     data-action="turbo:submit-end->turbo-modal#submitEnd keyup@window->turbo-modal#closeWithKeyboard"
     class="z-50 hidden animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center"
>
  <div data-action="click->turbo-modal#closeModal" class="fixed inset-0 bg-black bg-opacity-60 transition-opacity"></div>
  <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-xl sm:p-6">
    <header class="flex w-full justify-between text-black">
      <h2 data-turbo-modal-target="title" class="mt-0 mb-5 text-xl font-medium"></h2>
      <div class="absolute right-0 top-0 pr-4 pt-4 sm:block">
        <%= button_tag data: { action: "turbo-modal#closeModal" }, class: "rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>
    </header>
    <!-- Modal body -->
    <div class="max-h-[60vh] overflow-y-auto">
      <div id="modalContent" data-turbo-modal-target="content"></div>
      <div data-turbo-modal-target="loader" role="status" class="absolute -translate-x-1/2 -translate-y-1/2 top-2/4 left-1/2">
        <svg aria-hidden="true" class="w-8 h-8 mr-2 text-gray-200 animate-spin fill-blue-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"></path>
          <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"></path>
        </svg>
        <span class="sr-only opacity-20"><%= t(:label_loading) %></span>
      </div>
    </div>
    <!-- Modal footer -->
    <div data-turbo-modal-target="footer" class="hidden flex items-center pt-5 gap-2.5 rounded-b dark:border-gray-600">
      <%= button_tag t(:button_save),
                     type: 'button',
                     data: {
                       action: "click->turbo-modal#submit",
                       "turbo-modal-is-continue-button-param": false
                     },
                     class: 'reset_purplemine text-white bg-gradient-to-r from-[#3F83F8] via-[#1C64F2] to-[#1A56DB] hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-6 py-1.5 text-center2' %>
      <%= button_tag t(:button_create_and_continue),
                     type: 'button',
                     data: {
                       action: "click->turbo-modal#submit",
                       "turbo-modal-target": "continueButton",
                       "turbo-modal-is-continue-button-param": true
                     },
                     class: 'hidden text-white bg-gradient-to-r from-[#0E9F6E] to-[#057A55] hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-6 py-1.5 text-center2' %>
      <%= link_to t(:button_cancel), 'javascript:void(0)', data: { action: "click->turbo-modal#closeModal" }, class: "text-[#1C64F2] bg-[#E1EFFE] hover:bg-[#C3DDFD] focus:ring-4 focus:outline-none focus:ring-gray-100 font-medium rounded-lg text-sm px-4 py-1.5 text-center inline-flex items-center" %>
    </div>
  </div>
</div>