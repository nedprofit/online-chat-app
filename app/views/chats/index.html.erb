<div id="chats" class="container mx-auto">
  <div class="py-6 h-screen">
    <div class="flex border border-grey rounded shadow-lg h-full">

      <!-- Left -->
      <div class="w-1/3 border flex flex-col">

        <!-- Header -->
        <div class="py-2 px-3 bg-grey-lighter flex flex-row justify-between items-center">
          <%= button_tag class: 'text-[13px] inline-flex cursor-pointer items-center justify-center gap-2 rounded-md border bg-white p-1 align-middle text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50',
                         data: {
                           action: "click->open-modal#openModal",
                           controller: "open-modal",
                           "open-modal-title-value": "#{t(:button_create_chat)}",
                           "open-modal-partial-value": "chats/form",
                           "open-modal-url-value": "#{new_chat_path}",
                           "open-modal-turbo-frame-value": "new_chat",
                           "open-modal-has-continue-value": false,
                           "open-modal-action-method-value": "POST"
                         } do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            <%= t(:button_create_chat) %>
          <% end %>
        </div>

        <div class="bg-grey-lighter flex-1 overflow-auto">
          <% if @chats.any? %>
            <% @chats.each do |chat| %>
              <%= render partial: "chats/chat", locals: { chat: chat } %>
            <% end %>
          <% end %>
        </div>

        <div class="p-2">
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>

      <!-- Right -->
      <div id="chat_content"  class="w-2/3 border flex flex-col">

      </div>

    </div>
  </div>
</div>